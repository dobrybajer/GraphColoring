<Window x:Class="GraphColoring.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:graphColoring="clr-namespace:GraphColoring"
        Title="Graph Coloring" Height="600" Width="800" ResizeMode="NoResize" Background="#FF979797">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Menu>
            <MenuItem Header="Dodaj dane">
                <MenuItem Header="Z pliku" Click="Open_OnClick"/>
                <Separator />
                <MenuItem Header="Losowy graf" Click="Generate_OnClick"/>
            </MenuItem>
            <MenuItem Header="Uruchom">
                <MenuItem Header="CPU (C#)" Click="CPU1_OnClick"/>
                <Separator />
                <MenuItem Header="CPU (C++)" Click="CPU2_OnClick"/>
                <Separator />
                <MenuItem Header="GPU (CUDA C++)" Click="GPU_OnClick"/>
            </MenuItem>
            <MenuItem Header="Pomoc">
                <MenuItem Header="O programie" Click="AboutProgram_OnClick"/>
                <Separator />
                <MenuItem Header="O algorytmie" Click="AboutAlgorithm_OnClick"/>
                <Separator />
                <MenuItem Header="Instrukcja użytkownika" Click="HowTo_OnClick"/>
                <Separator />
                <MenuItem Header="Wersja" Click="Version_OnClick"/>
            </MenuItem>
        </Menu>
        <!--<Grid Style="{StaticResource OpacityPanel}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <graphColoring:Tile Tag="M1" Text="Załaduj dane" Click="Tile_Click"></graphColoring:Tile>
            <graphColoring:Tile Tag="M2" Grid.Column="1" Text="Algorytm" Click="Tile_Click"></graphColoring:Tile>
            <graphColoring:Tile Tag="M3" Grid.Column="2" Text="Pomoc" Click="Tile_Click" ></graphColoring:Tile>
            <graphColoring:Tile Tag="M4" Grid.Column="3" Text="Wyjście" Click="Tile_Click"></graphColoring:Tile>
        </Grid>-->
        <Grid Grid.Row="1" Name="ContentPanel" Style="{StaticResource ContentPanel}" Height="Auto"/>
        <StackPanel Grid.Row="2" Name="StatusPanel" Style="{StaticResource StatPanel}">
            
        </StackPanel>
    </Grid>
</Window>
